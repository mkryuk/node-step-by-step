{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "removeComments": true,
  },
  "exclude": [
    "node_modules"
  ]
}
